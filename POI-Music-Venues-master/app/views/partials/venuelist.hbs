{{#each venues}}

<section class="ui raised segment">
    <div class="ui grid">

        <article class="eight wide column">


                <header class="ui  header">{{category}}</header>
          <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Venue</th>
                    <th>Location</th>

                {{#if ../user.admin}}
                    <th>Edit</th>
                    <th>Delete</th>
                {{/if}}
                </tr>
                </thead>
                <tbody>

                {{#each pois}}


                    <tr>
                        <td> <a href="/venue/{{_id}}">{{name}}</a></td>
                        <td> {{location}} </td>

                        {{#if ../../user.admin}}
                        <td><a href="/venue/update/{{_id}}"><i class="edit outline icon"></i></a></td>

                        <td><a href="/venue/delete/{{_id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="ui trash icon"></i></a></td>
                        {{/if}}
                    </tr>
                {{/each}}


                </tbody>
            </table>
            </article>
                <aside class="six wide column">
                    <img src="{{pois.0.imageMain}}" class="ui medium image">
                </aside>



    </div>
</section>
{{/each}}